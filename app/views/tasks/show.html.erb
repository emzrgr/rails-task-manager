<% @tasks %>
<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<% if !@task.completed %>
  <input type="checkbox"><%= "This task is not completed" %></input>
<% else %>
  <input type="checkbox" checked><%= "This task is completed" %></input>
<% end %>
<p><%= link_to "Back to list", index_path %></p>

<button><%= link_to "Edit task", edit_path(@task) %></button>
